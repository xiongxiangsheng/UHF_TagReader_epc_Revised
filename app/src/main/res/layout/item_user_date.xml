<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blue"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:text="EPC: " />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text=""
                android:textColor="@color/blu"
                android:textSize="20dp"
                android:id="@+id/textView_epc" />
            <TextView
                android:id="@+id/textview_readcount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginRight="2dp"
                android:gravity="right"
                android:textColor="@color/text_red"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:background="@color/background_light_gray"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="left"
                    android:text="NFC_UID:"
                    android:textColor="@color/blue"
                    android:textSize="20dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/gifview_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text=""
                        android:textColor="@color/blu"
                        android:textSize="20dp"
                        android:id="@+id/textView_nfc_uid" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textSize="20dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/blue"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:text="StratTime:" />
                <LinearLayout
                    android:background="@color/gifview_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text=""
                        android:textColor="@color/blu"
                        android:textSize="20dp"
                        android:id="@+id/textView_start_time" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textSize="20dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="left"
                    android:text="Temperature:"
                    android:textColor="@color/blue"
                    android:textSize="20dp" />
                <LinearLayout
                    android:background="@color/gifview_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text=""
                        android:textColor="@color/blu"
                        android:textSize="20dp"
                        android:id="@+id/textView_temperature" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="left"
                        android:text="Â°C"
                        android:textColor="@color/colorAccent"
                        android:textSize="20dp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/blue"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:text="TotalSamples:" />
                <LinearLayout
                    android:background="@color/gifview_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="@color/blu"
                        android:id="@+id/textView_count" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="left"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textSize="20dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/blue"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:text="Interval:" />
                <LinearLayout
                    android:background="@color/gifview_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="@color/blu"
                        android:id="@+id/textView_interval" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="left"
                        android:text="sec"
                        android:textSize="20dp"
                        android:textColor="@color/colorAccent"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/blue"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:text="OutOfLimit:" />
                <LinearLayout
                    android:background="@color/gifview_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="@color/blu"
                        android:id="@+id/textView_outof_limit" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="left"
                        android:text="times"
                        android:textSize="20dp"
                        android:textColor="@color/colorAccent"
                        />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>